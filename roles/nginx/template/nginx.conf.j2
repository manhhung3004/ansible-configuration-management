# define the user that will own the process
upstream jenkins {
    server "{{ ip_address }}":""{{ port }};
}

# HTTP to HTTPS redirect for Jenkins
server {
    listen {{ port }};
    server_name jenkins.manhhung20033004.io.vn;
    return 301 https://$server_name$request_uri;
}

# jenkins server configuration
server {
    listen 443 ssl;
    server_name jenkins.manhhung20033004.io.vn;

    ssl_certificate /etc/ssl/certs/fullchain.pem;
    ssl_certificate_key /etc/ssl/private/key.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    location / {
        proxy_pass http://jenkins;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
    
    access_log off;
    error_log /var/log/nginx/jenkins_error.log error;
}

# config error page
server {
    listen 80;
    server_name _;

    root /var/www/html;
    charset UTF-8;

    error_page 404 /page-not-found.html;
    location = /page-not-found.html {
        internal;  # Allow internal redirects
    }
    
    location / {
        return 404;
    }

    access_log off;
    log_not_found off;
    error_log /var/log/nginx/error.log error;
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}
